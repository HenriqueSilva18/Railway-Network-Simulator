<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.ui.gui.controller.AssignTrainDialogController"
      spacing="15" style="-fx-padding: 20; -fx-pref-width: 350;">
    <Label text="Assign Train to Route" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Route:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="routeComboBox" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Train:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="trainComboBox" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="assignButton" text="Assign" onAction="#handleAssign"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>