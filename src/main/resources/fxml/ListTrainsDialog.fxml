<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pt.ipp.isep.dei.ui.gui.controller.ListTrainsDialogController"
      spacing="10" alignment="CENTER" style="-fx-padding: 15;"
      minWidth="800" prefWidth="800">

    <Label text="Train List" style="-fx-font-size: 24; -fx-font-weight: bold"/>

    <ListView fx:id="trainsListView" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>
