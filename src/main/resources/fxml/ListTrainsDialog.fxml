<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pt.ipp.isep.dei.ui.gui.controller.ListTrainsDialogController"
      spacing="10" alignment="CENTER" style="-fx-padding: 15;">

    <Label text="Train List" style="-fx-font-size: 24; -fx-font-weight: bold"/>

    <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
        <VBox spacing="10">
            <Label text="Available Trains" style="-fx-font-size: 16; -fx-font-weight: bold"/>
            <ListView fx:id="trainsListView" VBox.vgrow="ALWAYS"/>
        </VBox>

        <ScrollPane fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 10;">
                <TitledPane text="Basic Information" expanded="true">
                    <GridPane hgap="10" vgap="5">
                        <Label text="Name:" GridPane.rowIndex="0" />
                        <Label fx:id="trainNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Type:" GridPane.rowIndex="1" />
                        <Label fx:id="trainTypeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Speed:" GridPane.rowIndex="2" />
                        <Label fx:id="speedLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Capacity:" GridPane.rowIndex="3" />
                        <Label fx:id="capacityLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Fuel Cost:" GridPane.rowIndex="4" />
                        <Label fx:id="fuelCostLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Route:" GridPane.rowIndex="5" />
                        <Label fx:id="routeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>
                </TitledPane>

                <TitledPane text="Current Cargo" expanded="true">
                    <ListView fx:id="currentCargoListView" prefHeight="100"/>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </SplitPane>

    <Button text="Close" onAction="#handleClose"/>
</VBox>
