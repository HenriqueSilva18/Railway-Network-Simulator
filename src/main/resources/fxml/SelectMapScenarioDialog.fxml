<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.TextFlow?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pt.ipp.isep.dei.ui.gui.controller.SelectMapScenarioDialogController"
      spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20;">

    <Label text="Select Map:"/>
    <ChoiceBox fx:id="mapChoiceBox" prefWidth="300.0"/>

    <Label text="Select Scenario:" style="-fx-padding: 10 0 0 0;"/>
    <ChoiceBox fx:id="scenarioChoiceBox" prefWidth="300.0"/>

    <Label text="Map Preview:" style="-fx-padding: 10 0 0 0;"/>
    <ScrollPane fitToWidth="true" prefHeight="400.0" style="-fx-background: white;">
        <TextFlow fx:id="mapPreviewArea" 
                  style="-fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-background-color: white;"
                  prefWidth="600.0" 
                  prefHeight="400.0"
                  minHeight="400.0"/>
    </ScrollPane>

    <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-padding: 10 0 0 0;"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
    </HBox>

</VBox> 