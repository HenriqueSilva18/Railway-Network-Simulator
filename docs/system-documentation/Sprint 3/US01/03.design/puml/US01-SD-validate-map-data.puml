@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber

participant ":CreateMapController" as CTRL
participant "Map" as MAP
participant "Size" as SIZE

autonumber 6
-> CTRL: validateMapData(mapDTO)
        activate CTRL
        autonumber 6.1
        group Validate map data
            CTRL -> MAP: validateMapName(mapDTO.nameID)
            activate MAP
                MAP --> CTRL: valid
            deactivate MAP
            
            CTRL -> SIZE: validateSize(mapDTO.width, mapDTO.height)
            activate SIZE
                SIZE --> CTRL: valid
            deactivate SIZE
        end
        autonumber 7
        <-- CTRL: valid
deactivate CTRL

@enduml 