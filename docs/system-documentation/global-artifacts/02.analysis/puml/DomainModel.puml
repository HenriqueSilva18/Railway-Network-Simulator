@startuml
skinparam shadowing false
skinparam classAttributeIconSize 0
skinparam class {
  BackgroundColor LightBlue
  BorderColor Blue
}
skinparam enum {
  BackgroundColor LightBlue
  BorderColor Blue
}
hide circle
hide methods

class Player {
  username
  password
  budget
}

class Editor {
    username
    password
    createdMaps
    createdScenarios
}

class Map {
  nameID
}

class Size {
  width
  height
}

class Position {
  x
  y
  occupied
}

class Scenario {
  nameID
  timeRestrictions
  technologicalRestrictions
  historicalRestrictions
}

class Simulator {
  status
  runTime
  report
}

class City {
  nameID
  houseBlocks
  productionRate
  suppliedCargo
  demandedCargo
}

class Industry {
  nameID
  sector
  type
  description
  availabilityYear
  productionRate
  suppliedCargo
  demandedCargo
}

class Cargo {
  name
  amount
  lifespan
  type
}


class Station {
  nameID
  economicRadius
  cost
  storageCapacity
  centerPoint
  buildingSlots
  availableCargo
  requestedCargo
  upgradeHistory
}

class Building {
  nameID
  type
  availabilityYear
  evolutionCost
  evolutionStagesLeft
}

class RailwayLine {
  length
  trackType
  cost
}

class Locomotive {
  nameID
  type
  power
  acceleration
  topSpeed
  startYear
  fuelCost
  availabilityYear
  acquisitionPrice
  maintenancePrice
}

class Train {
  nameID
}

class Carriage {
  storageCapacity
}

class Route {
  nameID
  stationSequence
  cargoList
}

class StationUpgrade {
  upgradeDate
  upgradeCost
  previousType
  newType
}

