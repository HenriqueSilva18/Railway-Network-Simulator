@startuml
skinparam shadowing false
skinparam classAttributeIconSize 0
skinparam class {
  BackgroundColor LightBlue
  BorderColor Blue
}
hide circle
hide methods

class Player {
  username
}

class Station {
  nameID
}

class StationType {
  name
  type
}

class RailwayLine {
  isElectrified
  length
}

class RailwayNetwork {
  nameID
}

class Locomotive {
  nameID
  type
  power
}

class Train {
  nameID
}

' Relationships specific to US13
Player "1" -- "*" Train : verifies travel for >
Station "*" -- "1" StationType : defined by >
RailwayLine "1" -- "2" Station : connects >
Train "1" -- "1" Locomotive : powered by >
RailwayNetwork "1" -- "*" RailwayLine : contains >
RailwayNetwork "1" -- "*" Station : has >

note "Train types:\n- Steam\n- Diesel\n- Electric" as TrainTypes
TrainTypes .. Locomotive

note "Station types:\n- Depot\n- Station\n- Terminal" as StationTypes
StationTypes .. StationType

@enduml
