@startuml
'skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
'skinparam linetype orto

skinparam classAttributeIconSize 0

'left to right direction

class ApplicationSession
{
    - ApplicationSession()
    + {static} getInstance()
    + getCurrentSession()
}

class UserSession
{
    + getUserEmail()
}

class Employee {
    - name : String
    - email : String
    - position : String
    - phone : String
}

class Task {
    - reference :String
    - description : String
    - informalDescription : String
    - technicalDescription : String
    - duration : int
    - cost : double

    + Task(reference, description,\ninformalDescription, technicalDescription,\nduration, cost, taskCategory, createdBy)
}

class TaskCategory {
    - description : String
}

class Organization {
    - name : String
    - vatNumber : String
    - website : String
    - phone : String
    - email : String

    + Organization(name, vatNumber, webSite, phone, email, postalAddress, manager)
    + anyEmployeeHasEmail(email)
    + getEmployeeByEmail(email)
    + createTask(reference, description, informalDesccription, technicalDescription, \nduration, cost, taskCategory, employee)
    - addTask(task)
    - validateTask(task)
}

class TaskCategoryRepository {
    + getTaskCategories()
    + getTaskCategoryByDescription(taskCategoryDescription)
}

class OrganizationRepository {
    + getOrganizationByEmployeeEmail(email)
}

class Repositories {
    - Repositories()
    + {static} getInstance()
    + getTaskCategoryRepository()
    + getOrganizationRepository()
}

class CreateTaskController {
    + CreateTaskController()
    + getTaskCategories()
    + createTask(reference, description, informalDescription, \n   technicalDescription, duration, cost, taskCategoryDescription)
    - getTaskCategoryByDescription(taskCategoryDescription)
    - getEmployeeFromSession()
}

note right of CreateTaskController
    categoryDescription is retrieved
    from selected data
end note

note bottom of TaskCategoryRepository
    - used for displaying
    the task category list
end note

class CreateTaskUI {
}

CreateTaskUI .> CreateTaskController

CreateTaskController ..> ApplicationSession
CreateTaskController ..> UserSession
CreateTaskController ..> TaskCategory
CreateTaskController ..> TaskCategoryRepository
CreateTaskController ..> Organization
CreateTaskController ..> OrganizationRepository
CreateTaskController .> Repositories

Repositories -> "1" Repositories : instance
Repositories --> "1" OrganizationRepository : organizationRepository
Repositories -> "1" TaskCategoryRepository : taskCategoryRepository

ApplicationSession -> "1" ApplicationSession : instance
ApplicationSession ..> UserSession

TaskCategoryRepository --> "*" TaskCategory : taskCategories

OrganizationRepository --> "*" Organization : organizations

Organization --> "*" Task : tasks
Organization --> "*" Employee : employees

Task --> "1" TaskCategory : taskCategory
Task --> "1" Employee : createdBy

class MaintenanceRouteUI {
    + MaintenanceRouteUI()
    + checkMaintenanceRoute()
}

class MaintenanceRouteController {
    - railwayNetwork : RailwayNetwork
    
    + MaintenanceRouteController()
    + getMaintenanceTypes()
    + calculateMaintenanceRoute(maintenanceType)
    + visualizeNetwork()
    - validateRoute(route)
}

class RailwayNetwork {
    - nameID : String
    - lines : List<RailwayLine>
    - stations : List<Station>
    
    + RailwayNetwork(nameID)
    + getLines()
    + getStations()
    + getElectrifiedLines()
    + exportToDOT()
}

class RailwayLine {
    - startStation : Station
    - endStation : Station
    - isElectrified : boolean
    - length : double
    
    + RailwayLine(startStation, endStation, isElectrified, length)
    + getStartStation()
    + getEndStation()
    + isElectrified()
}

class Station {
    - nameID : String
    - position : Position
    
    + Station(nameID, position)
    + getConnectedLines()
    + getPosition()
}

class MaintenanceRoute {
    - startStation : Station
    - routeSequence : List<RailwayLine>
    - maintenanceType : MaintenanceType
    
    + MaintenanceRoute(startStation, maintenanceType)
    + addLine(line)
    + isComplete()
    + toString()
}

class MaintenanceType {
    - name : String
    - description : String
    
    + MaintenanceType(name, description)
    + toString()
}

class FleuryAlgorithm {
    + {static} findMaintenanceRoute(network, maintenanceType)
    - {static} isValidStartingPoint(station)
    - {static} isBridge(line)
}

class Position {
    - x : double
    - y : double
    
    + Position(x, y)
    + getX()
    + getY()
}

class GraphvizAdapter {
    + generateDOT(network)
    + exportToPNG(dotFile)
}

MaintenanceRouteUI ..> MaintenanceRouteController
MaintenanceRouteController --> RailwayNetwork
MaintenanceRouteController ..> FleuryAlgorithm
MaintenanceRouteController ..> GraphvizAdapter
RailwayNetwork "1" --> "*" RailwayLine
RailwayNetwork "1" --> "*" Station
RailwayLine "1" --> "2" Station
Station --> Position
MaintenanceRoute --> MaintenanceType
MaintenanceRoute "*" --> "*" RailwayLine
MaintenanceRoute --> Station

@enduml